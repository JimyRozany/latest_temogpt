generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  username  String    @unique // max length is 100 chart
  password  String //if you need column is optional write ? after datatype 
  // isAdmin   Boolean  @default(false)
  role      String    @default("READER")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]

  Score           Score[]
  UserShortAnswer UserShortAnswer[]
  UserScore       UserScore[]
  OpenQuizOrNot   OpenQuizOrNot[]
}

// enum Role {
//   ADMIN
//   READER
//   CHATTING
// }

model Article {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  title      String
  body       String
  //one-to-many relation between article and user
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  //one-to-many relation between article and category
  categories Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int
}

model Category {
  id                  Int                   @id @default(autoincrement())
  name                String
  articles            Article[]
  questions           Question[]
  QuestionShortAnswer QuestionShortAnswer[]
  UserShortAnswer     UserShortAnswer[]
  OpenQuizOrNot       OpenQuizOrNot[]

  PassingDegree PassingDegree[]
}

model Score {
  id          Int      @id @default(autoincrement())
  html        Boolean?
  php         Boolean?
  programming Boolean?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Question {
  id       Int      @id @default(autoincrement())
  question String
  answer   String
  degree   Int
  options  Option[] // Relation to options

  //one-to-many relation between article and category
  categories Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // QuestionDegree QuestionDegree[]
}

model Option {
  id         Int      @id @default(autoincrement())
  name       String
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model QuestionShortAnswer {
  id              Int               @id @default(autoincrement())
  question        String
  degree          Int
  categoryId      Int
  category        Category          @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  UserShortAnswer UserShortAnswer[]
}

model UserShortAnswer {
  id              Int                 @id @default(autoincrement())
  answer          String
  userId          Int
  user            User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId      Int
  category        Category            @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  questionShortId Int
  questionShort   QuestionShortAnswer @relation(fields: [questionShortId], references: [id], onDelete: Cascade)
}

model UserScore {
  id     Int    @id @default(autoincrement())
  score  Int
  quiz   String
  userId Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PassingDegree {
  id         Int      @id @default(autoincrement())
  degree     Int
  categoryId Int      @unique
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model OpenQuizOrNot {
  id         Int     @id @default(autoincrement())
  openQuiz   Boolean
  userId     Int
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId Int

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}
